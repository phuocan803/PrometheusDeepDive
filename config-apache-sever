
#Install Apache
sudo apt update
sudo apt-get install -y apache2

#Make a request to Apache to verify it is up and running
curl localhost:80

#Download and install the Apache Exporter binary
sudo useradd -M -r -s /bin/false apache_exporter
wget https://github.com/Lusitaniae/apache_exporter/releases/download/v1.0.10/apache_exporter-1.0.10.linux-amd64.tar.gz
note: use version 1.0.10, version 0.70.0 do not support 

tar xvfz apache_exporter-1.0.10.linux-amd64.tar.gz
